{
  "functions": {
    "predeploy": [
      "yarn --cwd \"$RESOURCE_DIR\" lint",
      "yarn --cwd \"$RESOURCE_DIR\" build"
    ],
    "source": "functions",
    "ignore": [
      "**/.env.*",
      "**/.prettier*",
      "**/.gitignore",
      "**/.runtimeconfig*",
      "**/*.log",
      "**/README.md",
      "**/tsconfig.json",
      "**/src/**",
      "**/node_modules/**"
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "ui": {
      "enabled": true
    }
  }
}
